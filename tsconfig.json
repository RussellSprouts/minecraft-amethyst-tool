{
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"],
        "compilerOptions": {
            "baseUrl": ".",
            "strict": false,
            "target": "ES2020",
            "module": "CommonJS"
        }
    },
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ES2020",
        "target": "ES2020",
        "strict": true,
        "sourceMap": true,
        "noPropertyAccessFromIndexSignature": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "paths": {
            "pako": ["./third_party/pako/pako.min"]
        }
    },
    "exclude": [
        "out",
        "spec"
    ]
}